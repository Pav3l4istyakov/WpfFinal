<Window x:Class="WpfFinal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFinal"
        xmlns:localConverters="clr-namespace:WpfFinal.Converters"
        mc:Ignorable="d"
         Title="Список дел" Height="500" Width="500" Background="#FFFDFAF1">
    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="Margin" Value="10,5,0,5"/>
            <Setter Property="Foreground" Value="#5EBEC4"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Cascadia Mono"/>
        </Style>
        <Style x:Key="ListBoxItemStyle" TargetType="{x:Type ListBoxItem}">
            <Setter Property="FontWeight" Value="Normal"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="StrikeThroughStyle" TargetType="TextBlock">
            <Style.Triggers>
          <DataTrigger Binding="{Binding IsCompleted}" Value="True">
          <Setter Property="TextDecorations" Value="Strikethrough"/>
          </DataTrigger>
       </Style.Triggers>
        </Style>
        <Style x:Key="CommonButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="#5EBEC4"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
        </Style>
        <Style x:Key="CommonImageStyle" TargetType="Image">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Stretch" Value="Uniform"/>
        </Style>
        <localConverters:RedPastDateConverter x:Key="RedPastDateConverter"/>
        <localConverters:OrangeTodayDateConverter x:Key="OrangeTodayDateConverter"/>
        <localConverters:YellowTomorrowDateConverter x:Key="YellowTomorrowDateConverter"/>
        <localConverters:GreenFutureDateConverter x:Key="GreenFutureDateConverter"/>
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.New" Executed="OpenNewTaskWindowExecuted"/>
        <CommandBinding Command="ApplicationCommands.Delete" CanExecute="CanDeleteSelected" Executed="DeleteSelectedExecuted"/>
        <CommandBinding Command="ApplicationCommands.Save" Executed="SaveTxtFileExecuted"/>
    </Window.CommandBindings>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Список дел" Style="{StaticResource HeaderStyle}" HorizontalAlignment="Left" Margin="10"/>
        <StackPanel Grid.Row="0" HorizontalAlignment="Right" Orientation="Horizontal" Margin="5">
            <Button Margin="5" VerticalAlignment="Top" Click="SaveButtonClick" Style="{StaticResource CommonButtonStyle}">
                <Image Style="{StaticResource CommonImageStyle}" Source="Image/save.png"/>
            </Button>
            <Button Margin="5" VerticalAlignment="Top" Click="AddButton_Click" Style="{StaticResource CommonButtonStyle}">
                <Image Style="{StaticResource CommonImageStyle}" Source="Image/add.png"/>
            </Button>
        </StackPanel>
        <ListBox Grid.Row="1" Margin="5" Name="TaskListListBox" ItemsSource="{Binding TodoList}"
                 HorizontalContentAlignment="Stretch" ItemContainerStyle="{StaticResource ListBoxItemStyle}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <CheckBox Grid.Column="0" Grid.RowSpan="2" IsChecked="{Binding IsCompleted, Mode=TwoWay}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Checked="OnCheckboxChecked"
                                  Unchecked="OnCheckboxUnchecked"/>
                        <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Title}" TextWrapping="Wrap" FontSize="12" Style="{StaticResource StrikeThroughStyle}"/>
                        <ScrollViewer Grid.Column="1" Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" FontSize="12" Foreground="Gray" Style="{StaticResource StrikeThroughStyle}"/>
                        </ScrollViewer>
                        <TextBlock Grid.Column="2" Grid.Row="0" Text="{Binding DueDate, StringFormat='d'}" FontSize="12">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=DueDate, Converter={StaticResource RedPastDateConverter}}" Value="true">
                                            <Setter Property="Foreground" Value="Red"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Path=DueDate, Converter={StaticResource OrangeTodayDateConverter}}" Value="true">
                                            <Setter Property="Foreground" Value="#FFEA6A20"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Path=DueDate, Converter={StaticResource YellowTomorrowDateConverter}}" Value="true">
                                            <Setter Property="Foreground" Value="#DAA520"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Path=DueDate, Converter={StaticResource GreenFutureDateConverter}}" Value="true">
                                            <Setter Property="Foreground" Value="#FF71C52F"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <Button Grid.Column="3" Grid.Row="0" ToolTip="Удалить" Click="DeleteButtonClick" Style="{StaticResource CommonButtonStyle}">
                            <Image Style="{StaticResource CommonImageStyle}" Source="Image/delete.png"/>
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Orientation="Vertical" Grid.Row="2" HorizontalAlignment="Stretch" Margin="5">
            <TextBlock Name="ProgressText" HorizontalAlignment="Center"/>
            <ProgressBar Name="TaskProgressBar" Height="20" Margin="5">
                <ProgressBar.Resources>
                    <Style TargetType="ProgressBar">
                        <Setter Property="Background" Value="#FFFDFAF1"/>
                        <Setter Property="Foreground" Value="#5EBEC4"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="BorderBrush" Value="#5EBEC4"/>
                    </Style>
                </ProgressBar.Resources>
            </ProgressBar>
        </StackPanel>
    </Grid>
</Window>